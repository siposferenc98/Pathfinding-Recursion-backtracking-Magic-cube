        <Label Content="Sor:" HorizontalAlignment="Left" Margin="212,59,0,0" VerticalAlignment="Top" x:Name="sorLabel"/>
        <Label Content="Oszlop:" HorizontalAlignment="Left" Margin="212,93,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="82,77,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" x:Name="cb">
