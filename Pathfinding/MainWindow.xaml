        <TextBox HorizontalAlignment="Left" Margin="280,63,0,0" Text="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="sor"/>
        <TextBox HorizontalAlignment="Left" Margin="280,97,0,0" Text="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="oszlop"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="320,130,0,0" VerticalAlignment="Top" Click="general" x:Name="utkeresBTN1"/>
